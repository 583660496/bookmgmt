<header>
  <h3>图书列表</h3>
  <% admins_only do %>
    <ul class="actions">
      <li>
        <%= link_to "新增图书", new_admin_book_path, class: "new" %>
      </li>
    </ul>
  <% end %>
</header>
<!-- # TODO: need beautify -->
<div id="books" class="row">
  <table class="table">
    <thead>
      <tr>
        <th>图书编号</th>
        <th>图书名称</th>
        <th>作者</th>
        <th>出版社</th>
        <th>出版时间</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.author %></td>
          <td><%= book.pub_name %></td>
          <td><%= book.pub_year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
